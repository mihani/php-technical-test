{{ form_start(form) }}
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="mb-1">{{ form_label(form.beginDate) }}</label>
            {{ form_widget(form.beginDate) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="mb-1">{{ form_label(form.type) }}</label>
            {{ form_widget(form.type) }}
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="mb-1">{{ form_label(form.duration) }}</label>
            {{ form_widget(form.duration) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="mb-1">{{ form_label(form.distance) }} (in meter)</label>
            {{ form_widget(form.distance) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="mb-1">{{ form_label(form.comment) }}</label>
    {{ form_widget(form.comment) }}
</div>
<button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
